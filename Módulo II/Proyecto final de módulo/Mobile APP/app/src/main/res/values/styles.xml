<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:color">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="AppTheme.FontButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.H1">
        <item name="android:textSize">96sp</item>
        <item name="android:fontFamily">@font/robotolight</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.H2">
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">@font/robotolight</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.H3">
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.H4">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.H5">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.H6">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
